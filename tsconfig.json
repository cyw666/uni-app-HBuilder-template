// tsconfig.json
{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"strict": true,
		"jsx": "preserve",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"sourceMap": true,
		"skipLibCheck": true,
		"importHelpers": true,
		"allowSyntheticDefaultImports": true,
		"useDefineForClassFields": true,
		"resolveJsonModule": true,
		"lib": [
			"esnext",
			"dom"
		],
		"types": [
			"@dcloudio/types",
			"@uni-helper/uni-app-types",
			"@uni-helper/uni-cloud-types",
			"@uni-helper/uni-ui-types"
		]
	},
	"exclude": [
		"node_modules",
		"unpackage",
		"src/**/*.nvue"
	]
}